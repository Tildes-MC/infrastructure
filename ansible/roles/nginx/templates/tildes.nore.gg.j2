server {
    listen 80;
    listen [::]:80;

    server_name {{ domain }};

    # Serve Next.js static files directly
    location ^~ /_next/static/ {
        alias {{ web_app_dir }}/.next/static/;
        expires 1y;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # Serve public folder files directly
    location /static/ {
        alias {{ web_app_dir }}/public/;
        access_log off;
    }

    # Serve common static file types from public folder
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        root {{ web_app_dir }}/public;
        access_log off;
    }

    # Proxy /map to BlueMap on port {{ bluemap_port }} (strips /map prefix)
    location ^~ /map/ {
        proxy_pass http://localhost:{{ bluemap_port }}/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Proxy everything else to Next.js
    location / {
        proxy_pass http://localhost:{{ web_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}
